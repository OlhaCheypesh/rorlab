<%= form_for @user, method: :patch do |f| %>


   <p><%= f.label "FirstName" %></p>
   <%= f.text_field :firstname %><br />

   <p><%= f.label "LastName" %></p>
   <%= f.text_field :lastname %><br />

   <p><%= f.label :gender %></p>
   <%= f.select :gender,['male','female'] %>

   <p><%= f.label "Age" %></p>
   <%= f.text_field :age %><br />

   <p><%= f.label "Phone*" %></p>
   <%= f.text_field :phone %><br />

   <p><%= f.label :email %></p>
   <%= f.text_field :email %><br />

   <p><%= f.label "Country" %></p>
   <%= f.text_field :country %><br />

   <p><%= f.label "City" %></p>
   <%= f.text_field :city %><br />

   <p><%= f.label "Apt" %></p>
   <%= f.text_field :apt %><br />

   <p><%= f.label "Link to" %></p>
   <%= f.text_field :link %><br > 


   <p><%= f.label :avatar %></p>
   <%= f.file_field :avatar %>

   <%= f.submit "save" %>
<% end %>